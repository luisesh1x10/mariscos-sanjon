<p id="notice"><%= notice %></p>
<div>
  <div class="card-panel white center-align">
      <h1>Pedido 17/10/2019, sucursal madero</h1>
      <h3>Estatus: <%= Dinero.statusRequets(@requet.status) %></h3>
  </div>
  <div class = 'container'>
    <table class="striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Cantidad</th>
          <th>Unidad de medida</th>
          <th>Anotaciones</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @requet.requets_lines.each do |line|%>
        <td><%= line.ingrediente.nombre %></td>
        <td><%= line.cantidad %></td>
        <td><%= line.ingrediente.measurement_unit.name %></td>
        <td><%= line.anotaciones %></td>
        <%end%>
      </tbody>
    </table>
    <br>
    <% if (@requet.status === 0)%>
      <td><%= link_to "Iniciar", requets_avanzar_path(@requet), { method: :put, :class=>"waves-effect waves-light btn"}%></td>
    <% end %>
    <% if (@requet.status === 1)%>
      <td><%= link_to "Terminar", requets_avanzar_path(@requet), {method: :put,:class=>"waves-effect waves-light btn"}%></td>
    <% end %>
    <td><%= link_to 'Peticiones Pendientes', requets_path, {:class=>"waves-effect waves-light btn"}%></td>
    <td><%= link_to 'Imprimir',  '', {:class=>"waves-effect waves-light btn"}%></td>
  </div>  
</div>  