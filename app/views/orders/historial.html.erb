 <div ng-controller ="historial">
     <div class = "row" >
         <div class="container">
             <ul class="collapsible" data-collapsible="accordion">
              <li ng-repeat = "orden in ordenes">
                <div class="collapsible-header"><i class="material-icons">no_sim</i>Orden #{{orden.id}}, nombre de mesa: {{orden.table.name}}</div>
                <div class="collapsible-body card">
                    <div class="container">
                        <div class="row">
                            <div class = "col  s12 m6 l3">
                                <ul>
                                    <li ng-repeat="platillo in orden.platillos">{{platillo.name}}: ${{platillo.price}}</li>
                                </ul>  
                            </div>
                            <div class="col s12 m6 l9">
                                <a class="waves-effect waves-light btn" ng-click="reactivar(orden.id)" >Reactivar</a>
                            </div>
                        </div>
                    </div>
                </div>
              </li>
            </ul>
        </div>
    </div>
 </div>